---
import '../styles/global.scss';

// Base domain URL without trailing slash
const domainBaseURL = 'https://AbhyudayaGupta.tech';
const ogImageUrl = `${domainBaseURL}/img/logo.svg`;

// Website publisher & region
const authorPublisher   = 'Abhyudaya Gupta';
const geoRegion         = 'India';

// SEO title, description and keywords
const seoTitle          = 'Abhyudaya Tech projects website';
const seoDescription    = 'Passionate web developer focused on creating innovative, efficient, and scalable web applications with a modern tech stack. .';
const seoKeywords       = 'Abhyudaya Gupta, Game dev, coding, technology projects, Unity, Shri Ram School Moulsari, Angular, Typescript, python';

// Twitter card data
const twitter = {
    title:          seoTitle,
    description:    seoDescription,
    image:          ogImageUrl,
    site:           '@Abhyudaya.tech',
    creator:        '@Abhyudaya Gupta'
};

// Open graph data
const openGraph = {
    title:          seoTitle,
    description:    seoDescription,
    url:            domainBaseURL,
    image:          ogImageUrl,
    type:           'website',
    locale:         'India',
    siteName:       seoTitle
};

// Dublin core
const dublinCore = {
    title:          seoTitle,
    creator:        authorPublisher,
    publisher:      authorPublisher,
    rights:         authorPublisher,
    description:    seoDescription,
    language:       'en',
    type:           'Software',
    format:         'text/html'
};

---

<!doctype html>
<html lang="en" class="bg-black text-gray-100 font-mono">

    <head>

        <!-- Crawler & Robots -->
        <meta name="robots" content="index, follow, noodp, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
        <meta name="revisit-after" content="7 days" />
        <meta name="revisit" content="after 7 days" />

        <!-- Start: Meta-Tags -->
        <meta charset="UTF-8" />
        <meta http-equiv="content-type"         content="text/html; charset=UTF-8">
        <meta http-equiv="Pragma"               content="cache" />
        <meta http-equiv="X-UA-Compatible"      content="IE=edge">
        <meta name="viewport"                   content="width=device-width, initial-scale=1">
        <!-- End: Meta-Tags -->

        <!-- Start: DNS prefetch and preconnect -->
        <!-- <link rel="preload" as="image" href="/img/logo.svg" /> -->
        <link rel="preconnect" href="https://brain.papersend.io" />
        <!-- End: DNS prefetch and preconnect -->

        <!-- Start: Theming and Favicons -->
        <link rel="icon" type="image/svg+xml" crossorigin="anonymous" href="/img/logo.svg" />

        <!-- Start: Misc meta tags -->
        <link rel="sitemap"                     href="/sitemap-index.xml" />
        <link rel="canonical"                   href={Astro.url} />

        <meta name="geo.region"                 content={geoRegion}>
        <meta name="author"                     content="Abhyudaya Gupta">
        <meta name="publisher"                  content="Abhyudaya Gupta">
        <meta name="copyright"                  content="Abhyudaya Gupta">
        <!-- End: Misc meta tags -->

        <!-- Start: Facebook open graph -->
        <meta property="og:title"               content="Abhyudaya Gupta">
        <meta property="og:description"         content="Portfolio of Abhyudaya Gupta — passionate about STEM, showcasing projects, research, and software projects.">
        <meta property="og:url"                 content={domainBaseURL}>
        <meta property="og:type"                content="website">
        <meta property="og:image"               content={ogImageUrl}>
        <meta property="og:locale"              content="en_US">
        <meta property="og:site_name"           content="Abhyudaya Gupta">
        <!-- End: Facebook open graph -->

        <!-- Start: Twitter card -->
        <meta name="twitter:card"               content="summary_large_image">
        <meta name="twitter:title"              content="Abhyudaya Gupta">
        <meta name="twitter:description"        content="Portfolio of Abhyudaya Gupta — passionate about STEM, showcasing projects, research, and software projects.">
        <meta name="twitter:image"              content={ogImageUrl}>
        <meta name="twitter:site"               content="@abhyudaya">
        <meta name="twitter:creator"            content="@abhyudaya">
        <!-- End: Twitter card -->

        <!-- Start: Dublin Core (DC) -->
        <meta name="DC.Title"                   content="Abhyudaya Gupta">
        <meta name="DC.Creator"                 content="Abhyudaya Gupta">
        <meta name="DC.Rights"                  content="Abhyudaya Gupta">
        <meta name="DC.Publisher"               content="Abhyudaya Gupta">
        <meta name="DC.Description"             content="Portfolio of Abhyudaya Gupta — passionate about STEM, showcasing projects, research, and software projects.">
        <meta name="DC.Language"                content="en">
        <meta name="DC.Type"                    content="Software">
        <meta name="DC.Format"                  content="text/html">
        <!-- End: Dublin Core (DC) -->

        <!-- Title & Description -->
        <title>Abhyudaya Gupta Tech website</title>
        <meta name="description" content="Portfolio of Abhyudaya Gupta — passionate about STEM, showcasing projects, research, and software work.">
        <meta name="abstract"    content="Portfolio of Abhyudaya Gupta — passionate about STEM, showcasing projects, research, and software work.">
        <meta name="keywords"    content="Abhyudaya Gupta, STEM, portfolio, projects, research, software development">

    </head>

    <body class="min-h-[100vh] flex items-center justify-center p-4">
        <slot />
    </body>

</html>